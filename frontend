<script>
    const API_URL = "YOUR_API_GATEWAY_URL/quote";

    async function loadQuote() {
        try {
            const res = await fetch(API_URL);
            const data = await res.json();

            document.getElementById('quote').textContent = data.text;
            document.getElementById('author').textContent = "â€” " + data.author;
        } catch (err) {
            document.getElementById('quote').textContent = "Error loading quote.";
            document.getElementById('author').textContent = "";
        }
    }

    loadQuote();
</script>

