import os
import json
import random
import boto3

# Initialize DynamoDB
dynamodb = boto3.resource('dynamodb')
table_name = os.environ.get('TABLE_NAME', 'QuotesTable')
table = dynamodb.Table(table_name)

def lambda_handler(event, context):
    # Scan table
    response = table.scan()
    items = response.get('Items', [])

    if not items:
        return {
            "statusCode": 500,
            "headers": {
                "Content-Type": "application/json",
                "Access-Control-Allow-Origin": "*"
            },
            "body": json.dumps({"error": "No quotes found"})
        }

    # Pick random quote
    quote = random.choice(items)

    return {
        "statusCode": 200,
        "headers": {
            "Content-Type": "application/json",
            "Access-Control-Allow-Origin": "*"
        },
        "body": json.dumps(quote)
    }
